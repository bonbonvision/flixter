<br />
<div class="booyah-box col-10 offset-1">
  <div class="booyah-box-title">
    <h1 class="text-center"><%= @course.title %></h1>
    <hr />
  </div>
  <%= link_to 'Preview As Student', course_path(@course), class: 'btn btn-primary float-right' %>
  <br class="clr" />

  <div class="add-new">
    <%= link_to 'Add A New Section', new_instructor_course_section_path(@course), class: 'btn btn-primary' %>
    <br />
    <br />
  </div>

  <ul>
    <% @course.sections.each do |section| %>
      <li>
        <%= section.title %>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'float-right btn btn-primary btn-sm' %>
        <ul>
          <% section.lessons.each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <br class="clr" />
      </li>
    <% end %>
  </ul>
</div>