<div class="booyah-box col-10 offset-1">
  <div class="form-title text-center">
    <h1>Add A New Course</h1>
  </div>
    <%= simple_form_for @course, url: instructor_courses_path do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :cost %>
      <br />
      <%= f.submit "Create", class: 'btn btn-primary' %>
    <br />
  <% end %>
  <br />
</div>