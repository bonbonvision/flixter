<br />

<div class="booyah-box col-8 offset-2">
  <div class="booyah-box-title">
    <h1>Add A New Course</h1>
    <hr />
  </div>
    <%= simple_form_for @course, url: instructor_courses_path do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :cost %>
      <%= f.input :image %>
      <br />
      <%= f.submit "Create", class: 'btn btn-primary' %>
    <br />
  <% end %>
  <br />
</div>