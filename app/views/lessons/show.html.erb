<br />

<div class="booyah-box col-12 col-md-8 offset-md-2">
  <div class="booyah-box-title">
    <h1><%= current_lesson.title %></h1>
  </div>
  <div class="lesson-subtitle text-center">
    <%= current_lesson.subtitle %>
  </div>
  <hr />

  <% if current_lesson.next_lesson.present? %>
    <%= link_to lesson_path(current_lesson.next_lesson), class: 'btn btn-info btn-sm float-right' do %>
        Next Lesson &nbsp;
      <span class="fa fa-forward"></span>
    <% end %>
  <% end %>
  <br />
  <br class="clr" />


  <video id="my-video" class="video-js vjs-big-play-centered vjs-fluid" controls preload="auto" width="auto" height="auto" poster="<%= image_path('black.jpg') %>" data-setup="{}">
    <source src="<%= current_lesson.video.to_s %>" type='video/mp4'>
    <noscript>
      <p class="vjs-no-js">
        To view this video please enable JavaScript, and consider upgrading to a web browser that
        <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
      </p>
    </noscript>
  </video>
  <br />
  <br />
</div>